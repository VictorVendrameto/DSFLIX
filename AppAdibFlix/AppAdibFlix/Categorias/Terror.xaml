<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppAdibFlix.Categorias.Terror">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#191919">
            <Label Text="DS FLIX" TextColor="#4BFFBC" FontSize="80" VerticalTextAlignment="Center" HorizontalTextAlignment="Center">

            </Label>
            <Grid ColumnDefinitions="*" RowDefinitions="*, *" BackgroundColor="#191919">
                <ImageButton x:Name="btnMyers" Grid.Row="0" Grid.Column="0"  Clicked="btnMyers_Clicked" Aspect="AspectFill"/>
                <ImageButton x:Name="btnBlackPhone" Grid.Row="0" Grid.Column="1" Clicked="btnBlackPhone_Clicked" Aspect="AspectFill"/>
                <ImageButton x:Name="btnPanico" Grid.Row="1" Grid.Column="0" Clicked="btnPanico_Clicked" Aspect="AspectFill"/>
                <ImageButton x:Name="btnInvocacao" Grid.Row="1" Grid.Column="1" Clicked="btnInvocacao_Clicked" Aspect="AspectFill"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>